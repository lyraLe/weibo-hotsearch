{
  "name": "weibosearch",
  "displayName": "Weibo Hotsearch Viewer",
  "description": "View Weibo Hotsearch and Entertainment trending topics directly in VS Code WebView.",
  "version": "0.0.2",
  "publisher": "LyraLee",
  "keywords": [
    "weibo",
    "hotsearch",
    "trending",
    "webview",
    "热搜",
    "微博",
    "工具"
  ],
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "weiboHotSearch.show",
        "title": "📈 显示微博热搜榜"
      }
    ],
  "viewsContainers": {
      "activitybar": [
        {
          "id": "weiboHotContainer",
          "title": "热榜",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "weiboHotContainer": [
        {
          "id": "weiboHotView",
          "name": "微博热搜"
        }
      ]
    }
  },
  "repository": {
		"type": "git",
		"url": "https://github.com/lyraLe/weibo-hotsearch.git"
	},
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "cheerio": "^1.1.0",
    "node-fetch": "^2.7.0",
    "puppeteer": "^24.12.1"
  }
}
